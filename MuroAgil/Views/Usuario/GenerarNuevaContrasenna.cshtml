@model MuroAgil.ViewModels.Usuario.GenerarNuevaContrasenaViewModel
@{
    ViewBag.Title = "Generar Nueva Contraseña - Muro Ágil";
}

<div class="card border-primary" style="max-width: 400px; margin: 0 auto; margin-bottom: 20px;">
    <div class="card-header text-white bg-primary">
        <strong>¡Generar Nueva Contraseña!</strong>
    </div>
    <div class="card-body">
        <form asp-action="GenerarNuevaContrasenna" method="post">
            <input class="form-control" asp-for="Correo" type="hidden" />
            <input class="form-control" asp-for="TokenRecupContr" type="hidden" />
            <div class="form-group">
                <label asp-for="Contrasenna"></label>
                <input class="form-control" asp-for="Contrasenna" type="password" />
                <span asp-validation-for="Contrasenna"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepContrasenna"></label>
                <input class="form-control" asp-for="RepContrasenna" type="password" />
                <span asp-validation-for="RepContrasenna"></span>
            </div>
            <input type="submit" style="width: 100%;" class="btn btn-success float-right" value="Crear Nueva Contraseña" />
        </form>
    </div>
</div>

